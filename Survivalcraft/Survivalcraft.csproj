      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <Content Include="Content\icon.ico" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="Esprima" Version="3.0.1" />
    <PackageReference Include="ExCSS" Version="4.2.4" />
    <PackageReference Include="Fizzler" Version="1.3.0" />

    <Compile Remove="Game\DeviceManager.cs" />
    <Compile Remove="ModsManager\JsModLoader.cs" />
    <Compile Remove="Screen\ModsInitScreen.cs" />
    <Compile Remove="SimpleJson\SimpleJson.Reflection\ReflectionUtils.cs" />
